<div class="posts">
<%= javascript_include_tag :defaults %>
<div class="container">
	<div class="width-wrapper">
		<div id="posts" class="left-col main-content">
			<ul class="nav-tabs">
				<li><a href=<%=dashboard_url%>>Dashboard</a><div class="tab-right"></div></li>              
				<li class="active"><h1><a href=<%=inbox_url%>>Inbox</a></h1><div class="tab-right"></div></li>
				<li><h1><a href=<%=employee_url%>>Employees</a></h1><div class="tab-right"></div></li>
			</ul>
			<div class="box-top-left"></div>
			<div class="box-top"></div>
			<div class="box-top-right"></div>
			<div class="main-padder">
				<div class="dash-box">

					<h2 class="header-bar">Posts</h2>
					<div class="header-tools">
						
					</div>
				</div>
				
<%@messages.each do |m|%>
<%if m.is_display==true%>
				<div id="post-1">
					<div class="avatar-header topless">
						<img alt="user1" src="images/users/user1.jpg" />

						<h3><a href="/post-view">Nike Rebranding Proposal with Coca-Cola</a></h3>
						<p class="desc"><strong>Last comment by Stuart B.</strong> on Thursday, August 26</p>
					</div>
					<div class="post-body">
						<p><%=m.message%></p>
					</div>

					<div class="post-footer">
           <p >         	
				<input type="checkbox" name="message" value="1" id="<%=m.id%>" onclick="modify_db('<%=m.id%>');" checked /> <%='Publish'%>
					</p>
						<div class="box-bottom-left"></div>
						<div class="box-bottom-right"></div>
					</div>
				</div>
	<%else%>
	<div id="post-1">
					<div class="avatar-header topless">
						<img alt="user1" src="images/users/user1.jpg" />

						<h3><a href="/post-view">Nike Rebranding Proposal with Coca-Cola</a></h3>
						<p class="desc"><strong>Last comment by Stuart B.</strong> on Thursday, August 26</p>
					</div>
					<div class="post-body">
						<p><%=m.message%></p>
					</div>

					<div class="post-footer">
                    	<p >
<input type="checkbox" name="message" value="1" id="<%=m.id%>" onclick="modify_db('<%=m.id%>');" /> <%='Publish'%>
</p>
						<div class="box-bottom-left"></div>
						<div class="box-bottom-right"></div>
					</div>
				</div>
				<%end%>
				<%end%>
